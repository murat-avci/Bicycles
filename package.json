{
  "name": "bicycles-2021",
  "version": "1.0.0",
  "description": "Акселератор Проект «Велосипеды» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "9.7.6",
    "browser-sync": "2.26.7",
    "del": "5.1.0",
    "gulp": "4.0.2",
    "gulp-csso": "4.0.1",
    "gulp-imagemin": "7.1.0",
    "gulp-minify": "3.1.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "8.0.0",
    "gulp-posthtml": "^3.0.4",
    "gulp-rename": "2.0.0",
    "gulp-sass": "4.1.0",
    "gulp-sourcemaps": "2.6.5",
    "gulp-svgstore": "7.0.1",
    "gulp-webp": "4.0.1",
    "posthtml-include": "^1.4.3",
    "push-dir": "0.4.1",
    "stylelint": "13.13.1",
    "stylelint-config-htmlacademy": "0.1.4"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "build": "gulp build",
    "test": "npm run editorconfig && npm run stylelint",
    "gh-pages": "push-dir --dir=build --branch=gh-pages",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.15"
  }
}
